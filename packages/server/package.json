{
  "name": "todo-server",
  "version": "1.0.0",
  "type": "module",
  "vitest": {
    "coverage": {
      "provider": "v8",
      "reporter": ["text", "json-summary", "lcov"],
      "reportsDirectory": "coverage"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "node --watch --loader ts-node/esm src/index.ts",
    "lint": "oxlint",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@vitest/coverage-istanbul": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "oxlint": "^1.32.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.15"
  }
}
