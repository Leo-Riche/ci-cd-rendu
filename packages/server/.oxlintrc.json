{
  "rules": {
    "no-console": "error"
  },
  "ignorePatterns": ["node_modules"],
  "overrides": [
    {
      "files": ["script/*.js"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["**/*.{ts,tsx}"],
      "plugins": ["typescript"],
      "rules": {
        "typescript/no-explicit-any": "error"
      }
    },
    {
      "files": ["**/test/**"],
      "plugins": ["vitest"],
      "env": {
        "vitest": true
      },
      "rules": {
        "vitest/no-disabled-tests": "error"
      }
    }
  ]
}